  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

  <link rel="shortcut icon" href="~/veltrix/images/favicon.ico" />

  <link href="~/veltrix/libs/chartist/chartist.min.css" rel="stylesheet" />

  <!-- Bootstrap Css -->
  <link href="~/veltrix/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
  <!-- Icons Css -->
  <link href="~/veltrix/css/icons.min.css" rel="stylesheet" type="text/css" />
  <!-- App Css-->
  <link href="~/veltrix/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />
</head>

<body data-sidebar="dark">
